    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tabs = document.querySelectorAll('.tab-btn');
            const contentSections = document.querySelectorAll('.content-section');

            tabs.forEach(tab => {
                tab.addEventListener('click', () => {
                    const target = tab.dataset.target;

                    tabs.forEach(t => t.classList.remove('active'));
                    tab.classList.add('active');

                    contentSections.forEach(section => {
                        if (section.id === target) {
                            section.classList.add('active');
                        } else {
                            section.classList.remove('active');
                        }
                    });
                });
            });

            function createEducChart() {
                const ctx = document.getElementById('educChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Capitalización de Mercado (Aprox.)', 'Precio de Venta del Activo'],
                        datasets: [{
                            label: 'Valor en Millones de USD',
                            data: [9.0, 32.5],
                            backgroundColor: [
                                'rgba(255, 182, 193, 0.6)',
                                'rgba(144, 238, 144, 0.6)'
                            ],
                            borderColor: [
                                'rgba(255, 182, 193, 1)',
                                'rgba(144, 238, 144, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Valor (en Millones de USD)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `$${context.raw.toFixed(1)} Millones`;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            function createCycuChart() {
                const ctx = document.getElementById('cycuChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['Ingresos Anualizados Actuales', 'Cartera de Pedidos Contratados'],
                        datasets: [{
                            label: 'Valor en Millones de USD',
                            data: [16, 69],
                            backgroundColor: [
                                'rgba(173, 216, 230, 0.6)',
                                'rgba(152, 251, 152, 0.6)'
                            ],
                            borderColor: [
                                'rgba(173, 216, 230, 1)',
                                'rgba(152, 251, 152, 1)'
                            ],
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Valor (en Millones de USD)'
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            },
                            tooltip: {
                                callbacks: {
                                    label: function(context) {
                                        return `$${context.raw} Millones`;
                                    }
                                }
                            }
                        }
                    }
                });
            }

            createEducChart();
            createCycuChart();
        });
    </script>
